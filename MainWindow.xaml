<Window x:Class="GamingTweaksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Gaming Tweaks Manager Pro" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryDark}">
    <Grid Background="{StaticResource DarkBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Profissional -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid Margin="40,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo e TÃ­tulo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource AccentPrimary}" CornerRadius="2" Padding="16" Margin="0,0,24,0">
                        <TextBlock Text="GTM" FontFamily="{StaticResource TechFont}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryDark}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Gaming Tweaks Manager Pro" 
                                 FontFamily="{StaticResource HeaderFont}"
                                 FontSize="24" FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Sistema Profissional de OtimizaÃ§Ã£o" 
                                 FontSize="12" 
                                 Foreground="{StaticResource TextSecondary}" 
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status Central -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Sistema Pronto'}"
                             FontFamily="{StaticResource TechFont}"
                             FontSize="14" FontWeight="Medium"
                             Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
                
                <!-- AÃ§Ãµes -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}" Command="{Binding CreateBackupCommand}" Margin="0,0,12,0">
                        <TextBlock Text="BACKUP SISTEMA"/>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Command="{Binding RefreshCommand}">
                        <TextBlock Text="ATUALIZAR"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ConteÃºdo Principal -->
        <Grid Grid.Row="1" Margin="40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Painel Lateral Profissional -->
            <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- CabeÃ§alho -->
                    <Border Grid.Row="0" Background="{StaticResource AccentPrimary}" CornerRadius="2,2,0,0" Padding="24,16">
                        <TextBlock Text="CATEGORIAS DE TWEAKS" 
                                 FontFamily="{StaticResource TechFont}"
                                 FontSize="14" FontWeight="Bold" 
                                 Foreground="{StaticResource PrimaryDark}"/>
                    </Border>

                    <!-- Filtros -->
                    <StackPanel Grid.Row="1" Margin="24,20">
                        <CheckBox Content="Apenas compatÃ­veis com meu hardware"
                                IsChecked="{Binding ShowOnlyCompatible}"
                                Foreground="{StaticResource TextPrimary}"
                                FontFamily="{StaticResource TechFont}"
                                FontSize="13"/>
                        
                        <Border Background="{StaticResource AccentError}" CornerRadius="2" Padding="16,12" Margin="0,16,0,0"
                              Visibility="{Binding IsAdministrator, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                            <TextBlock Text="âš  Execute como Administrador para aplicar tweaks" 
                                     Foreground="{StaticResource TextPrimary}" FontSize="12" FontWeight="Medium"/>
                        </Border>
                    </StackPanel>

                    <!-- Lista de Categorias -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,0,16,16">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ModernCard}" Margin="0,0,0,8" Cursor="Hand" Padding="16">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.SelectCategoryCommand}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                         FontFamily="{StaticResource TechFont}"
                                                         FontSize="16" FontWeight="SemiBold" 
                                                         Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Grid.Column="1" Text="{Binding StatusText}"
                                                         FontSize="11" Foreground="{StaticResource TextMuted}"/>
                                            </Grid>

                                            <TextBlock Grid.Row="1" Text="{Binding Description}"
                                                     FontSize="12" Foreground="{StaticResource TextSecondary}" 
                                                     Margin="0,8,0,0" TextWrapping="Wrap"/>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Painel Principal -->
            <Border Grid.Column="1" Style="{StaticResource ModernCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- CabeÃ§alho do Painel -->
                    <Border Grid.Row="0" Background="{StaticResource AccentPrimary}" CornerRadius="2,2,0,0" Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="{Binding SelectedCategory.Name, FallbackValue='INFORMAÃ‡Ã•ES DO SISTEMA'}" 
                                     FontFamily="{StaticResource TechFont}"
                                     FontSize="14" FontWeight="Bold" 
                                     Foreground="{StaticResource PrimaryDark}"/>
                            
                            <TextBlock Grid.Column="1" Text="{Binding SelectedCategory.StatusText}"
                                     FontSize="11" Foreground="{StaticResource PrimaryDark}" FontWeight="Medium"/>
                        </Grid>
                    </Border>

                    <!-- ConteÃºdo DinÃ¢mico -->
                    <Grid Grid.Row="1">
                        <!-- Tela Inicial de Hardware (quando nenhuma categoria estÃ¡ selecionada) -->
                        <Grid x:Name="HardwareInfoPanel" 
                              Visibility="{Binding SelectedCategory, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
                                <StackPanel MaxWidth="900">
                                    <!-- CabeÃ§alho -->
                                    <TextBlock Text="InformaÃ§Ãµes do Sistema" 
                                             FontFamily="{StaticResource HeaderFont}"
                                             FontSize="32" FontWeight="Light" 
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,32" HorizontalAlignment="Center"/>
                                    
                                    <!-- Cards de Hardware Detalhados -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- CPU Card -->
                                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernCard}" Margin="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="Cpu64Bit" Width="24" Height="24" 
                                                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1" Text="Processador" FontSize="18" FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <TextBlock Text="{Binding HardwareDetection.CpuInfo}" 
                                                         FontSize="12" Foreground="{StaticResource TextSecondary}"
                                                         TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                
                                                <Grid Margin="0,8,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="NÃºcleos" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                                        <TextBlock Text="{Binding HardwareDetection.CpuCores}" 
                                                                 FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="FrequÃªncia" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                                        <TextBlock Text="{Binding HardwareDetection.CpuFrequency}" 
                                                                 FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- GPU Card -->
                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernCard}" Margin="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="Monitor" Width="24" Height="24" 
                                                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1" Text="Placa de VÃ­deo" FontSize="18" FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <TextBlock Text="{Binding HardwareDetection.GpuInfo}" 
                                                         FontSize="12" Foreground="{StaticResource TextSecondary}"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- RAM Card -->
                                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ModernCard}" Margin="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="Memory" Width="24" Height="24" 
                                                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1" Text="MemÃ³ria RAM" FontSize="18" FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Capacidade" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                                        <TextBlock Text="{Binding HardwareDetection.RamInfo}" 
                                                                 FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="FrequÃªncia" FontSize="10" Foreground="{StaticResource TextMuted}"/>
                                                        <TextBlock Text="{Binding HardwareDetection.RamFrequency}" 
                                                                 FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Storage Card -->
                                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernCard}" Margin="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="HardDisk" Width="24" Height="24" 
                                                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1" Text="Armazenamento" FontSize="18" FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <TextBlock Text="{Binding HardwareDetection.Storage}" 
                                                         FontSize="12" Foreground="{StaticResource TextSecondary}"
                                                         TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Motherboard Card -->
                                        <Border Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource ModernCard}" Margin="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="Chip" Width="24" Height="24" 
                                                                           Foreground="{StaticResource AccentBrush}" Margin="0,0,12,0"/>
                                                    <TextBlock Grid.Column="1" Text="Placa-mÃ£e" FontSize="18" FontWeight="SemiBold"
                                                             Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                                                </Grid>
                                                
                                                <TextBlock Text="{Binding HardwareDetection.Motherboard}" 
                                                         FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                            
                            <!-- InstruÃ§Ãµes -->
                            <Border Style="{StaticResource ModernCard}" Margin="12,24,12,12">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’¡ Como usar" 
                                             FontSize="18" FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,16"/>
                                    
                                    <TextBlock FontSize="14" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap">
                                        <Run Text="1. Selecione uma categoria no painel lateral"/>
                                        <LineBreak/>
                                        <Run Text="2. Revise os tweaks disponÃ­veis"/>
                                        <LineBreak/>
                                        <Run Text="3. Clique em 'Aplicar' nos tweaks desejados"/>
                                        <LineBreak/>
                                        <Run Text="4. Execute como Administrador para aplicar as modificaÃ§Ãµes"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Lista de Tweaks (quando categoria selecionada) -->
                        <ScrollViewer Visibility="{Binding SelectedCategory, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                    VerticalScrollBarVisibility="Auto" Margin="24">
                            <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12" Padding="20">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- CabeÃ§alho do Tweak -->
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Title}" 
                                                                 FontFamily="{StaticResource TechFont}"
                                                                 FontSize="15" FontWeight="SemiBold"
                                                                 Foreground="{StaticResource TextPrimary}"/>
                                                        <TextBlock Text="{Binding Description}" 
                                                                 FontSize="12" 
                                                                 Foreground="{StaticResource TextSecondary}"
                                                                 TextWrapping="Wrap" Margin="0,6,0,0"/>
                                                    </StackPanel>

                                                    <!-- Badge de Impacto -->
                                                    <Border Grid.Column="1" Background="{StaticResource AccentTertiary}" 
                                                           CornerRadius="2" Padding="8,4" Margin="12,0">
                                                        <TextBlock Text="{Binding ImpactText}" 
                                                                 Foreground="{StaticResource TextPrimary}" FontSize="10" 
                                                                 FontWeight="Bold"/>
                                                    </Border>

                                                    <!-- BotÃ£o Aplicar -->
                                                    <Button Grid.Column="2" Style="{StaticResource ModernButton}"
                                                          Command="{Binding DataContext.ApplyTweakCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}"
                                                          Padding="16,8" FontSize="11" Margin="12,0,0,0">
                                                        <TextBlock Text="APLICAR"/>
                                                    </Button>
                                                </Grid>

                                                <!-- Status de AplicaÃ§Ã£o -->
                                                <Border Grid.Row="1" Background="{StaticResource AccentSuccess}" 
                                                      CornerRadius="2" Padding="12,8" Margin="0,12,0,0"
                                                      Visibility="{Binding IsApplied, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="âœ“ OperaÃ§Ã£o concluÃ­da com Ãªxito" 
                                                             Foreground="{StaticResource PrimaryDark}" FontSize="12" 
                                                             FontWeight="Medium"/>
                                                </Border>

                                                <!-- Detalhes TÃ©cnicos -->
                                                <Expander Grid.Row="2" Header="DETALHES TÃ‰CNICOS" Margin="0,12,0,0"
                                                        Foreground="{StaticResource TextSecondary}"
                                                        FontFamily="{StaticResource TechFont}"
                                                        FontSize="11" FontWeight="Bold">
                                                    <TextBlock Text="{Binding DetailedDescription}" 
                                                             FontSize="11" 
                                                             Foreground="{StaticResource TextMuted}"
                                                             FontFamily="{StaticResource MonoFont}"
                                                             TextWrapping="Wrap"
                                                             Margin="0,8,0,0"/>
                                                </Expander>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- RodapÃ© com Status e Monitoramento -->
        <materialDesign:Card Grid.Row="2" Margin="8,4,8,8" Background="{StaticResource DarkCardBrush}"
                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage, FallbackValue='Pronto'}"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             VerticalAlignment="Center" Margin="0,0,16,0"/>
                    
                    <!-- Monitoramento de Hardware -->
                    <StackPanel Orientation="Horizontal" DataContext="{Binding HardwareMonitoring}">
                        <Border Background="{StaticResource AccentBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Chip" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CpuUsageText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{StaticResource AccentBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Memory" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding RamUsageText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{StaticResource AccentBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Thermometer" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CpuTempText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <ProgressBar Grid.Column="1" Width="200" Height="4"
                           IsIndeterminate="{Binding IsLoading}"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="16,0,0,0"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
