<Window x:Class="GamingTweaksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Gaming Tweaks Manager Pro" 
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryDark}">
    <Grid Background="{StaticResource DarkBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Moderno -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" BorderBrush="{StaticResource AccentBlue}" BorderThickness="0,0,0,2">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo e Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource AccentBlue}" CornerRadius="12" Padding="12" Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="Rocket" Width="28" Height="28" Foreground="White"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Gaming Tweaks Manager Pro" 
                                 FontFamily="{StaticResource HeaderFont}"
                                 FontSize="28" FontWeight="Light" 
                                 Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text="Sistema Avançado de Otimização" 
                                 FontSize="14" 
                                 Foreground="{StaticResource AccentBlue}" 
                                 Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Monitoramento Central -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                          DataContext="{Binding HardwareMonitoring}"
                          Visibility="{Binding DataContext.SelectedCategory, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisConverter}}">
                    <Border Style="{StaticResource ModernCard}" Margin="8,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Chip" Width="18" Height="18" Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CpuUsageText}" Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource ModernCard}" Margin="8,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Memory" Width="18" Height="18" Foreground="{StaticResource AccentPurple}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding RamUsageText}" Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource ModernCard}" Margin="8,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Thermometer" Width="18" Height="18" Foreground="{StaticResource AccentOrange}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CpuTempText}" Foreground="{StaticResource TextPrimary}" FontSize="14" FontWeight="Medium" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Ações -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource ModernButton}" Command="{Binding CreateBackupCommand}" Margin="8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock Text="Backup" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" Command="{Binding RefreshCommand}" Background="{StaticResource AccentPurple}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" VerticalAlignment="Center"/>
                            <TextBlock Text="Atualizar" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Painel Lateral Moderno -->
            <Border Grid.Column="0" Style="{StaticResource ModernCard}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho -->
                    <Border Grid.Row="0" Background="{StaticResource AccentBlue}" CornerRadius="8,8,0,0" Padding="20,16">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderMultiple" Width="24" Height="24" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="Categorias de Tweaks" 
                                     FontFamily="{StaticResource TechFont}"
                                     FontSize="18" FontWeight="Medium" 
                                     Foreground="White" Margin="12,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Filtros -->
                    <StackPanel Grid.Row="1" Margin="20,16">
                        <CheckBox Content="Apenas compatíveis com meu hardware"
                                IsChecked="{Binding ShowOnlyCompatible}"
                                Foreground="{StaticResource TextPrimary}"
                                FontFamily="{StaticResource TechFont}"/>
                        
                        <Border Background="{StaticResource AccentRed}" CornerRadius="6" Padding="12,8" Margin="0,12,0,0"
                              Visibility="{Binding IsAdministrator, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ShieldAlert" Width="16" Height="16" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="Execute como Administrador" 
                                         Foreground="White" FontSize="12" FontWeight="Medium" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Lista de Categorias -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,0,12,12">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.SelectCategoryCommand}"
                                                        CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" FontSize="22" 
                                                         VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                <TextBlock Text="{Binding Name}" 
                                                         FontFamily="{StaticResource TechFont}"
                                                         FontSize="16" FontWeight="Medium"
                                                         Foreground="{StaticResource TextPrimary}"/>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1" Text="{Binding Description}"
                                                     FontSize="13" 
                                                     Foreground="{StaticResource TextSecondary}"
                                                     TextWrapping="Wrap" Margin="34,4,0,12"/>

                                            <Grid Grid.Row="2" Margin="34,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding StatusText}"
                                                         FontSize="12" 
                                                         Foreground="{StaticResource TextMuted}"
                                                         VerticalAlignment="Center"/>

                                                <Button Grid.Column="1" Style="{StaticResource ModernButton}"
                                                      Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ApplyCategoryCommand}"
                                                      CommandParameter="{Binding}"
                                                      Background="{StaticResource AccentGreen}"
                                                      Padding="12,6" FontSize="11">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="PlayArrow" Width="12" Height="12"/>
                                                        <TextBlock Text="Aplicar" Margin="6,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Painel Principal - Tweaks -->
            <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho da Categoria -->
                    <Border Grid.Row="0" Background="{StaticResource AccentPurple}" CornerRadius="8,8,0,0" Padding="20,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding SelectedCategory.Icon, FallbackValue='🎮'}" FontSize="24" 
                                         VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='Gaming Tweaks Manager Pro'}" 
                                             FontFamily="{StaticResource TechFont}"
                                             FontSize="20" FontWeight="Medium" Foreground="White"/>
                                    <TextBlock Text="{Binding SelectedCategory.Description, FallbackValue='Selecione uma categoria para começar'}"
                                             FontSize="13" Foreground="White" Opacity="0.8" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1" Text="{Binding SelectedCategory.StatusText}"
                                     FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Lista de Tweaks -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                        <ItemsControl ItemsSource="{Binding FilteredTweaks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Cabeçalho do Tweak -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Title}" 
                                                             FontFamily="{StaticResource TechFont}"
                                                             FontSize="16" FontWeight="Medium"
                                                             Foreground="{StaticResource TextPrimary}"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                             FontSize="13" 
                                                             Foreground="{StaticResource TextSecondary}"
                                                             TextWrapping="Wrap" Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <!-- Badge de Status -->
                                                <Border Grid.Column="1" Background="{Binding ImpactColor}" 
                                                       CornerRadius="12" Padding="8,4" Margin="12,0">
                                                    <TextBlock Text="{Binding ImpactText}" 
                                                             Foreground="White" FontSize="10" 
                                                             FontWeight="Bold"/>
                                                </Border>

                                                <!-- Toggle Switch -->
                                                <ToggleButton Grid.Column="2" Style="{StaticResource ModernToggle}"
                                                            IsChecked="{Binding IsEnabled}"
                                                            Command="{Binding DataContext.ToggleTweakCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="12,0,0,0"/>
                                            </Grid>

                                            <!-- Indicador de Status -->
                                            <Border Grid.Row="1" Background="{StaticResource AccentGreen}" 
                                                  CornerRadius="6" Padding="12,6" Margin="0,12,0,0"
                                                  Visibility="{Binding IsApplied, Converter={StaticResource BoolToVisConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="CheckCircle" Width="16" Height="16" 
                                                                           Foreground="White" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Tweak Ativo" Foreground="White" FontSize="12" 
                                                             FontWeight="Medium" Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Detalhes Expandidos -->
                                            <Expander Grid.Row="2" Header="Detalhes Técnicos" Margin="0,12,0,0"
                                                    Foreground="{StaticResource TextSecondary}">
                                                <StackPanel Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding DetailedDescription}" 
                                                             FontSize="12" 
                                                             Foreground="{StaticResource TextMuted}"
                                                             TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Expander>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Rodapé com Status e Monitoramento -->
            <materialDesign:Card Grid.Row="2" Margin="8,4,8,8" Background="{StaticResource DarkCardBrush}"
                               materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <Grid Margin="16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="{Binding StatusMessage, FallbackValue='Pronto'}"
                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                 VerticalAlignment="Center" Margin="0,0,16,0"/>
                        
                        <!-- Monitoramento de Hardware -->
                        <StackPanel Orientation="Horizontal" DataContext="{Binding HardwareMonitoring}">
                            <Border Background="{StaticResource AccentGreenBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Chip" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CpuUsageText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{StaticResource AccentOrangeBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Memory" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding RamUsageText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{StaticResource AccentRedBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Thermometer" Width="14" Height="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CpuTempText}" Foreground="White" FontSize="11" Margin="4,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <ProgressBar Grid.Column="1" Width="200" Height="4"
                               IsIndeterminate="{Binding IsLoading}"
                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                               Margin="16,0,0,0"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
